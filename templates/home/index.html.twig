{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    {% for type, message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% if app.user %}
        <h1>Bonjour {{ app.user.firstname }} {{ app.user.lastname }}</h1>
    {% endif %}
{% endblock %}
